<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#F44337"
        android:minHeight="50sp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/topMenu">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_menu"
            android:minWidth="30sp"
            android:minHeight="30sp"
            android:layout_marginLeft="10sp"/>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_menu_search"
            android:minWidth="30sp"
            android:minHeight="30sp"
            android:layout_marginRight="10sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:gravity="center"
                android:background="#F44337"
                android:textColor="#FFFFFF"
                android:width="115sp"
                android:height="50sp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title1"
                android:gravity="center"
                android:text="在线音乐"
                android:width="115sp"
                android:height="50sp"
                android:background="#F44337"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_viewpager"/>
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainBoard"
        android:layout_below="@id/topMenu"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/coverImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/default_cover"
            android:minWidth="50sp"
            android:minHeight="50sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musicName"
            android:text="@string/music_name"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/coverImg"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorName"
            android:text="@string/author_name"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_below="@id/musicName"
            android:layout_toRightOf="@id/coverImg"
            android:layout_marginLeft="15sp"/>
        <ImageButton
            android:id="@+id/musicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_play_bar_btn_playlist"
            android:minWidth="50sp"
            android:minHeight="50sp"
            android:layout_marginRight="10sp"/>
        <ImageButton
            android:id="@+id/playNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_play_bar_btn_next"
            android:minWidth="50sp"
            android:minHeight="50sp"
            android:layout_toLeftOf="@id/musicList"/>
        <ImageButton
            android:id="@+id/playStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_play_bar_btn_play"
            android:minWidth="50sp"
            android:minHeight="50sp"
            android:layout_toLeftOf="@id/playNext"/>

    </RelativeLayout>


</RelativeLayout>